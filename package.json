{
  "name": "@malang-dev/template-hono-api",
  "version": "1.0.0",
  "description": "Template repository for new TypeScript projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/malang-dev/template-hono-api"
  },
  "author": {
    "name": "Malang.dev",
    "email": "hello@malang.dev",
    "url": "https://malang.dev/"
  },
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "prebuild": "rimraf dist",
    "format": "prettier --write .",
    "dev": "nodemon",
    "build": "tsup",
    "start": "node -r dotenv/config dist/serve.cjs",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^4.0.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "tsup": "^8.2.4",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint \"src/**/*.ts\"",
      "prettier --write --ignore-unknown"
    ]
  },
  "tsup": {
    "entry": [
      "src/serve.ts",
      "src/main.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.1",
    "@hono/swagger-ui": "^0.4.0",
    "dotenv": "^16.4.7",
    "hono": "^4.5.6",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "winston-transport": "^4.9.0",
    "zod": "^3.23.8"
  }
}
