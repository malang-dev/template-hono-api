{
  "name": "@malang-dev/api",
  "version": "1.0.0",
  "description": "Hono API application",
  "type": "module",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsup --tsconfig tsconfig.build.json",
    "dev": "nodemon --signal SIGTERM",
    "format": "prettier --write .",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "start": "node -r dotenv/config dist/serve.cjs",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.1",
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^1.2.0",
    "@libsql/client": "^0.17.0",
    "@scalar/hono-api-reference": "^0.9.40",
    "better-auth": "^1.4.18",
    "dotenv": "^17.0.0",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.5.6",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "winston-transport": "^4.9.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@malang-dev/eslint-config": "workspace:*",
    "@malang-dev/typescript-config": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.39.0",
    "jest": "^30.0.0",
    "nodemon": "^3.1.4",
    "npm-run-all2": "^8.0.0",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.2.4",
    "typescript": "^5.4.2"
  },
  "tsup": {
    "entry": [
      "src/serve.ts",
      "src/main.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "engines": {
    "node": ">= 20"
  }
}
